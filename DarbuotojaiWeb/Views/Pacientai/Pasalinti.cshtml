@using DarbuotojaiWeb.Models
@model Pacientas

<style>
	.hidden {
		display: none;
	}
</style>


<div class="text-danger">
	@foreach (var modelState in ViewData.ModelState.Values)
	{
		foreach (var error in modelState.Errors)
		{
			<p>@error.ErrorMessage</p>
		}
	}
</div>

<form method="post">
	<input asp-for="DarbuotojasId" hidden />
	<div class="border p-3 mt-4">
		<h2 class="text-primary">Paciento duomenys</h2>
		<hr />
	</div>
	<div class="mb-3 row p-1">
		<label class="p-0">Vardas</label>
		<input asp-for="Vardas" disabled class="form-control" />
	</div>
	<div class="mb-3 row p-1">
		<label class="p-0">Pavardė</label>
		<input asp-for="Pavarde" disabled class="form-control" />
	</div>
	<div class="mb-3 row p-1">
		<label class="p-0">Asmens kodas</label>
		<input asp-for="AsmensKodas" disabled class="form-control" />
	</div>
	<div class="mb-3 row p-1">
		<label class="p-0">Adresas</label>
		<input asp-for="Adresas" disabled class="form-control" />
	</div>
	<div class="mb-3 row p-1">
		<label class="mb-3">Priskirtas darbuotojas:</label>
		<span>@Model.Darbuotojas</span>
	</div>

	<div class="row">
		<div class="col-6 col-md-3">
			<button type="submit" class="btn btn-danger form-control">Pašalinti pacientą</button>
		</div>
		<div class="col-6 col-md-3">
			<a asp-controller="Pacientai" asp-action="Index" class="btn btn-outline-secondary border form-control">
				Atgal
			</a>
		</div>
	</div>
</form>